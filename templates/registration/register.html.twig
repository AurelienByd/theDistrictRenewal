{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1 class="ms-3 mt-3">Inscription</h1>

    {% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}

        {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
        {{ form_widget(registrationForm.plainPassword) }}
        {{ form_errors(registrationForm.plainPassword) }}

        {{ form_row(registrationForm.nom) }}

        {{ form_row(registrationForm.prenom) }}

        {{ form_row(registrationForm.telephone) }}

        {{ form_row(registrationForm.adresse) }}

        {{ form_row(registrationForm.cp) }}

        {{ form_row(registrationForm.ville) }}

        {{ form_row(registrationForm.agreeTerms, {
            label: 'Accepter les conditions'
        }) }}

        <button type="submit" class="btn-info">Enregistrer</button><button type="reset" class="btn-info ms-5">Annuler</button>
    {{ form_end(registrationForm) }}

    <a href="{{ path('app_login') }}" class="fs-5 m-2">Déjà inscrit ?</a>
{% endblock %}
